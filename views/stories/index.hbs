<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- editIcon (storyUser, loginUser, storyId) --}}
                    {{!-- In first param is storyUser,and we are in the loop, so the "user" is storyUser --}}
                    {{!-- we want to take "loginUser", we have to leave this loop, so we add "../user" is loginUser--}}
                    {{{editIcon user ../user _id }}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{ user._id }}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}} " class="btn grey">Read more</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories to display</p>
    {{/each}}
</div>
